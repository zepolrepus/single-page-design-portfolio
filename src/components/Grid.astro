---
import GridItem from './GridItem.astro';

import data from '../assets/items.json';
import type { IGrid } from '../interfaces/IGrid';

const gridItems: IGrid[] = data.items;




---

<div class="grid grid-cols-2 grid-rows-6 sm:grid-cols-4 sm:grid-rows-3 md:grid-cols-6 md:grid-rows-2 gap-5 md:gap-6 text-neutral-0 text-2xl font-bold w-full">
    {gridItems.map((item) => (
        <GridItem gridItem={item} />
    ))}
</div>
