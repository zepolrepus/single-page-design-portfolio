---
const slides = [
    {
        image: '/assets/image-slide-1.jpg',
        alt: 'Slide 1',
    },
    {
        image: '/assets/image-slide-2.jpg',
        alt: 'Slide 2',
    },
    {
        image: '/assets/image-slide-3.jpg',
        alt: 'Slide 3',
    },
    {
        image: '/assets/image-slide-4.jpg',
        alt: 'Slide 4',
    },
    {
        image: '/assets/image-slide-5.jpg',
        alt: 'Slide 5',
    },
];
---
<section class="w-full px-6 mx-auto container lg:max-w-[1110px] md:max-w-[710px] flex flex-col lg:flex-row items-center gap-10">
    <div class="relative w-full h-[356px] lg:h-[572px] overflow-clip">
        <h1 class="text-neutral-900 text-[40px] sm:text-[56px] leading-[1.2] sm:leading-[1.3] font-bold text-center w-[343px] sm:w-[704px] md:w-full"> My Work</h1>
        <div id="carousel" class="absolute top-[100px] left-1/4 flex flex-row items-center justify-center gap-4">
        {slides.map((slide, index) => (
            <div class="w-[270px] h-[180px] lg:w-[540px] lg:h-[360px] rounded-lg shadow-lg">
                <img src={slide.image} alt={slide.alt} class="w-full h-full object-cover" />
            </div>
        ))}

        </div>
        <div>
            <img    id="prevSlide"
                    src="/assets/icon-arrow-left.svg" alt="Previous Slide" class="absolute left-4 top-1/2 transform -translate-y-1/2 cursor-pointer bg-neutral-900 hover:bg-galactic_blue-500 p-2 sm:p-4 rounded-full invisible" />
            <img id="nextSlide"
                    src="/assets/icon-arrow-right.svg" alt="Next Slide" class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer bg-neutral-900 hover:bg-galactic_blue-500 p-2 sm:p-4 rounded-full" />
        </div>
    </div>

    <script>
        const carousel = document.getElementById('carousel');
        const prevSlide = document.getElementById('prevSlide');
        const nextSlide = document.getElementById('nextSlide');

        if (nextSlide) {
            nextSlide.addEventListener('click', () => {
                const boxLeftPost = carousel.offsetLeft;
                carousel.style.left = `${boxLeftPost + -200}px`;
                if (prevSlide) prevSlide.style.visibility = 'visible'; // Show the previous button when moving right
                if (boxLeftPost <= -1700) {
                    nextSlide.style.visibility = 'hidden'; // Hide the next button when at the end
                }
            });
        }
        if (prevSlide) {
            prevSlide.addEventListener('click', () => {
                const boxLeftPost = carousel.offsetLeft;
                carousel.style.left = `${boxLeftPost + 200}px`;
                if (boxLeftPost >= -150) {
                    nextSlide.style.visibility = 'visible'; // Hide the next button when at the end
                    prevSlide.style.visibility = 'hidden'; // Hide the previous button when at the start
                }
            });
        }
 
    </script>
